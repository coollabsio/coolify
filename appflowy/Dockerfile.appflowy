   # Dockerfile for AppFlowy
   FROM node:14

   WORKDIR /app

   # Copy package.json and package-lock.json
   COPY package*.json ./

   # Install dependencies
   RUN npm install

   # Copy the rest of the application code
   COPY . .

   # Expose the port that AppFlowy runs on
   EXPOSE 3000

   # Start the application
   CMD ["npm", "start"]